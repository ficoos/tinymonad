{
    "defaultSeverity": "warning",
    "extends": [
        "tslint:recommended"
    ],
    "rules": {
        "quotemark": [
            true,
            "single",
            "jsx-double",
            "avoid-template",
            "avoid-escape"
        ],
        "variable-name": {
            "options": [
                "check-format",
                "ban-keywords",
                "allow-leading-underscore",
                "require-const-for-all-caps"
            ]
        },
        "interface-name": false,
        "class-name": false,
        "max-classes-per-file": false,
        "object-literal-sort-keys": false,
        "max-line-length": [
            true,
            80
        ]
    }
}